<form action="/post" method="post">
  <div>
    <label for="Title">Name:</label>
    <input type="text" id="title" name="title">
  </div>
  <div>
    <label for="content">Your Text Here:</label>
    <textarea id="text" name="content"></textarea>
  </div>
   <button type="submit" class="submitPost">Post</button>

</form>

<ul>
  <% @posts.each do |post| %>
    <li> <%= post.title %> </li>
    <li> <%= post.content %> </li>
    <li> <%= post.created_at %> </li>
  <% end %>
</ul>



